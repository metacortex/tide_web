<%= simple_form_for @board do |f| %>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :user_username, :value => current_user.name %>

  <%= f.input :title, :label => "TITLE", :wrapper_html => { :class => "big_text" } %>

  <div class="body_text">
    <%= f.input :body, :label => "BODY", :input_html => { :size => "96x24" }, :wrapper_html => { :class => "editor" } %>
  </div>
  
  <%= f.input :image_1, :label => "IMAGE 1", :hint => "* 첨부파일 이미지 1개당 1MB 미만 jpg, gif 지원" %>
  <%= image_preview_form(f,@board,:image_1) %>

  <%= f.input :image_2, :label => "IMAGE 2" %>
  <%= image_preview_form(f,@board,:image_2) %>

  <%= f.input :image_3, :label => "IMAGE 3" %>
  <%= image_preview_form(f,@board,:image_3) %>


  <div class="buttons">
    <%= f.submit "save", :class => "post" %>
  </div>

<% end %>
