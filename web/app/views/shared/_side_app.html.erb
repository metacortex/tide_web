<% @banners = Banner.where(:category => "side").includes(:event) %>

<% if banner = @banners.first %>

<div class="sb_element">
  <ul id="banner_slider">
    <% @banners.each do |b| %>
      <li><%= link_to image_tag(b.event.poster_image.url), b.event %></li>
    <% end %>
  </ul>
</div>

<% end %>
