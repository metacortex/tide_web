<head>
  <meta charset="utf-8">
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <%= csrf_meta_tag %>

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>TIDE Institute</title>
  <meta name="description" content="">
  <meta name="author" content="TIDE Institute">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->

  <!-- CSS: implied media="all" -->
  <%= stylesheet_link_tag "application" %>

  <!-- More ideas for your <head> here: h5bp.com/docs/#head-Tips -->

  <!-- All JavaScript at the bottom, except for Modernizr and Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
  <%= javascript_include_tag "modernizr" %>
</head>
<body>
<div class="wrapper">
  <div id="h">
    <h1><%= link_to "TIDE", root_path %></h1>
    <ul class="account_nav">
			<% if user_signed_in? %>
        <li><span class="current_user"><%= current_user.email %></span></li>
        <li><%= link_to "Log Out", destroy_user_session_path %></li>
      <% else %>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <li><%= link_to "Log In", new_user_session_path %></li>
			<% end %>
    </ul>
    
    <div id="globalsearch">
      <%= form_tag "/search", :method => "get", :class => "search empty", :id => "g-search" do %>
        <div class="sp-label">
          <input type="text" name="q" id="sp-searchtext" accesskey="s" autocomplete="off">
      	</div>
      <% end %>
      <div class="sp-magnify">
        <div class="magnify-searchmode"></div>
        <div class="magnify"></div>
      </div>
    </div>

    <div id="gnb">
      <%= navigation_tag :class => "top_nav" do |m| %>
        <%= m.item "TIDE", "/tide", :current => current_controller?(["main"]) %>
        <%= m.item "NEWS", posts_path, :current => current_controller?(["posts"]) %>
        <%= m.item "PEOPLE", users_path, :current => current_controller?(["users"]) %>
      <% end %>
    </div>
  </div>


  <div id="c">
    <%= yield %>
  </div>


  <div id="f">
  </div>
</div>


  <%= javascript_include_tag "application" %>

	
