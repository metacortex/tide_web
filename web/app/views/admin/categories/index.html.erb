<div class="browser">
  <div class="actions">
    <div class="button"><%= link_to "+Create Category", new_admin_category_path %></div>
  </div>
</div>

<div class="toolbox">
  
</div>

<table class="stats">
  <thead>
    <tr>
      <th class="status">Name</th>
      <th class="status">Title</th>
      <th class="status">Title(ENG.)</th>
      <th class="">Tags</th>
      <th class="status">#Posts</th>
      <th class="status">Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |c| %>
      <%= content_tag_for :tr, c do %>
        <td><%= c.name %></td>
        <td><%= c.title %></td>
        <td><%= c.title_en %></td>
        <td>
          <% c.tags.each do |tag| %>
            <%= tag.name %><br/>
          <% end %>
        </td>
        <td><%= c.posts_count %></td>
        <td><%= link_to "EDIT", edit_admin_category_path(c) %></td>
      <% end %>
    <% end %>
  </tbody>
</table>
