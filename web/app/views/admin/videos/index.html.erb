<div class="browser">
  <div class="actions">
    <div class="button"><%= link_to "+Add Video", new_admin_video_path %></div>
  </div>
</div>

<div class="toolbox">
  
</div>

<table class="stats">
  <thead>
    <tr>
      <th class="status">Vimeo ID</th>
      <th class="">Title</th>
      <th class="string2">Thumbnail</th>
      <th class="timestamp">Created At</th>
      <th class="actions">Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each do |c| %>
      <%= content_tag_for :tr, c do %>
        <td><%= c.vimeo_uid %></td>
        <td><%= c.title %></td>
        <td>
          <%= link_to (image_tag c.thumb_small), c.vimeo_url, :target => "_blank" %>
        </td>
        <td><%= l(c.created_at, :format => :long ) %></td>
        <td class="actions">
          <%= link_to "EDIT", edit_admin_video_path(c) %>
          <%= link_to "DELETE", admin_video_path(c), :method => :delete, :confirm => "Sure?" %>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
