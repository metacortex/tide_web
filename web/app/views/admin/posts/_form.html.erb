<%= simple_form_for [:admin,@post] do |f| %>

  <%= f.input :edit_status, :as => :select, :include_blank => false, :collection => [nil, "rejected", "waiting", "draft"] %>

  <%= f.input :kind, :as => :radio, :collection => [["Copyright resolved","compose"],["Copyright unresolved","link"]] %>
  <%= f.association :category, :include_blank => false, :label => "카테고리" %>

  <%= f.input :title, :size => 80 %>
  <%= f.input :source_url, :size => 80 %>
  

  <%= f.input :body, :input_html => { :size => "80x15" } %>

  <%= f.input :picture_image, :hint => "상세페이지에서 보여지는 이미지 max width 640px" %>
  <%= image_preview_form(f,@post,:picture_image) %>
  

  <%= f.submit %>
  <div class="cancel">
    or <%= link_to "cancel and return", return_url(admin_posts_path) %>
  </div>

<% end %>
